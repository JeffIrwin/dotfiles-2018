set number
set autoindent
set shiftwidth=2
set softtabstop=2
colorscheme koehler
set smartindent

" allow yanking of more than 50 lines
set viminfo='20,<5000,s10,h

set nolinebreak
set nolist " list disables linebreak
set wrapmargin=0
set expandtab
set tabstop=2
set textwidth=72

" Prevent linebreaks while typing
set formatoptions+=1
